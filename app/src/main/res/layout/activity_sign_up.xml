<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ButtonColor"
    android:gravity="center"
    tools:context=".SignUpActivity">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"
        android:background="@drawable/border_box">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="36dp"
            android:textColor="@color/ButtonColor"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpEmailId"
            android:background="@drawable/border_box"
            android:padding="10dp"
            android:hint=" Email"
            android:drawableLeft="@drawable/ic_baseline_mail_24"
            android:textColor="#484A48"
            android:textColorHint="#484A48"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpNameId"
            android:background="@drawable/border_box"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:hint=" Name"
            android:textColor="#484A48"
            android:textColorHint="#484A48"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpPassId"
            android:background="@drawable/border_box"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint="Password"
            android:textColor="#484A48"
            android:textColorHint="#484A48"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/signUpBtnId"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:backgroundTint="@color/ButtonColor"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:cornerRadius="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alreadyAccountId"
            android:text="Already have an account?"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:textColorHint="@color/ButtonColor"
            android:textColor="@color/ButtonColor"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>



</LinearLayout>